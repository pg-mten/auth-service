generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema", "typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth"]
}

model Role {
  id   Int    @unique @default(autoincrement())
  name String @db.VarChar()

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  Permission Permission[]
  User       User[]

  @@schema("auth")
}

model Permission {
  id         Int      @unique @default(autoincrement())
  action     String   @db.VarChar()
  subject    String   @db.VarChar()
  inverted   Boolean  @default(false)
  field      String[] @db.VarChar()
  conditions Json?    @db.JsonB()
  reason     String?  @db.Text()

  role   Role? @relation(fields: [roleId], references: [id])
  roleId Int?  @db.Integer()

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  @@schema("auth")
}

model User {
  id       Int    @unique @default(autoincrement())
  email    String @unique @db.VarChar(255)
  password String

  role   Role @relation(fields: [roleId], references: [id])
  roleId Int  @db.Integer()

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  AgentDetail       AgentDetail?
  MerchantDetail    MerchantDetail?
  AdminDetail       AdminDetail?
  merchantSignature MerchantSignature?

  @@schema("auth")
}

model AdminDetail {
  id       Int    @id @default(autoincrement())
  fullname String
  address  String
  phone    String

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  @@schema("auth")
}

model AgentDetail {
  id                Int    @id @default(autoincrement())
  username          String
  fullname          String
  address           String
  phone             String
  bankCode          String
  bankName          String @db.VarChar(100)
  accountNumber     String @db.VarChar(50)
  accountHolderName String @db.VarChar(100)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  @@schema("auth")
}

model MerchantDetail {
  id                Int     @id @default(autoincrement())
  ownerName         String
  businessName      String
  brandName         String
  phoneNumber       String
  nik               String
  ktpImage          String?
  npwp              String
  address           String
  province          String
  regency           String // Kabupaten / Kota
  district          String // Kecamatan
  village           String // Kelurahan
  postalCode        String
  bankCode          String
  bankName          String
  accountNumber     String
  accountHolderName String
  siupFile          String?
  coordinate        String?

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  @@schema("auth")
}

model MerchantSignature {
  id                Int     @id @default(autoincrement())
  clientId          String  @unique @db.VarChar(100)
  secretKey         String? @db.VarChar(255)
  previousSecretKey String? @db.VarChar(255)
  status            String  @db.VarChar(50)

  payoutUrl String? @db.VarChar(512)
  payinUrl  String? @db.VarChar(512)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  createdAt DateTime  @default(now())
  createdBy Int?      @db.Integer()
  updatedAt DateTime? @updatedAt()
  updatedBy Int?      @db.Integer()
  deletedAt DateTime? @db.Timestamp()

  @@schema("auth")
}
